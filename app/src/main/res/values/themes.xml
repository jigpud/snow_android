<resources>
    <!-- Base application theme. -->
    <style name="Theme.Snow" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="colorOnSurface">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- 自定义SplashScreen的样式 -->
    <style name="Theme.Snow.Staring" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.Snow</item>
    </style>

    <!-- PrimaryFilledButton -->
    <style name="Widget.Snow.Button.PrimaryFilledButton" parent="Widget.Material3.Button">
        <item name="materialThemeOverlay">@style/Widget.Snow.Button.PrimaryFilledButton.Overlay</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="rippleColor">@color/gray</item>
    </style>

    <style name="Widget.Snow.Button.PrimaryFilledButton.Overlay">
        <item name="colorContainer">@color/primary</item>
        <item name="colorOnSurface">@color/primary</item>
    </style>

    <!-- PrimaryTextButton -->
    <style name="Widget.Snow.Button.PrimaryTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/selector_primary_text_button_text_color</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">5dp</item>
        <item name="rippleColor">@color/primary_ripple</item>
    </style>

    <!-- UrlTextButton -->
    <style name="Widget.Snow.Button.UrlTextButton" parent="Widget.Snow.Button.PrimaryTextButton">
        <item name="android:textColor">@color/selector_url_text_button_text_color</item>
    </style>

    <!-- GrayFilledButton -->
    <style name="Widget.Snow.Button.GrayFilledButton" parent="Widget.Material3.Button">
        <item name="materialThemeOverlay">@style/Widget.Snow.Button.GrayFilledButton.Overlay</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="rippleColor">@color/gray_filled_btn_ripple</item>
    </style>

    <style name="Widget.Snow.Button.GrayFilledButton.Overlay">
        <item name="colorContainer">@color/gray</item>
        <item name="colorOnSurface">@color/gray</item>
    </style>

    <!-- ShadowButton -->
    <style name="Widget.Snow.Button.ShadowButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/selector_shadow_btn_bg_color</item>
        <item name="iconTint">@color/selector_shadow_btn_text_color</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="rippleColor">@color/primary</item>
    </style>
</resources>