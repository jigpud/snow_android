<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/food"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:strokeWidth="0dp"
    app:cardCornerRadius="15dp"
    app:rippleColor="@color/gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="225dp"
            android:layout_height="0dp"
            android:id="@+id/cover"
            android:src="@drawable/ic_placeholder_food_cover"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="1.83"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="ContentDescription"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintLeft_toLeftOf="@id/cover"
            app:layout_constraintRight_toRightOf="@id/cover"
            app:layout_constraintBottom_toTopOf="@id/description"
            tools:text="火锅 火锅 火锅 火锅 火锅 火锅 火锅 火锅 火锅 火锅 火锅 火锅 "/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toLeftOf="@id/name"
            app:layout_constraintRight_toRightOf="@id/name"
            app:layout_constraintBottom_toBottomOf="@id/cover"
            tools:text="就是火锅 就是火锅 就是火锅 就是火锅 就是火锅 就是火锅 就是火锅 就是火锅 就是火锅 "/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>