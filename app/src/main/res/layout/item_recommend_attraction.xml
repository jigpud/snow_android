<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:strokeWidth="0dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/cover"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="1"
            tools:src="@drawable/ic_placeholder_mine_bg"
            tools:ignore="ContentDescription"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/attraction_abstract"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="@id/cover"
            app:layout_constraintLeft_toLeftOf="@id/cover"
            tools:text="4.1（860游记）4.1（860游记）4.1（860游记）4.1（860游记）4.1（860游记）4.1（860游记）"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintBottom_toTopOf="@id/attraction_abstract"
            tools:text="重庆邮电大学重庆邮电大学重庆邮电大学重庆邮电大学重庆邮电大学"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>