<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recommend_tourism_talent"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/text_dark"
        android:text="@string/tourism_talent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refresh"
        style="@style/Widget.Snow.Button.PrimaryTextButton"
        android:layout_marginEnd="18dp"
        app:icon="@drawable/ic_refresh"
        app:iconPadding="0dp"
        app:iconSize="26dp"
        app:iconTint="@color/text_dark_mid"
        app:layout_constraintTop_toTopOf="@id/recommend_tourism_talent"
        app:layout_constraintBottom_toBottomOf="@id/recommend_tourism_talent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recommend_tourism_talent_list"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/recommend_tourism_talent"/>

</androidx.constraintlayout.widget.ConstraintLayout>